                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="exampleModalLabel">
                        <i class="bi bi-pencil-square"></i> Editar Ingreso
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <!-- Cuerpo del modal -->
                <div class="modal-body">
                    <form id="formIngresoEditar">
                        <!-- Concepto -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <label for="conceptoIngresoEditar" class="form-label">Concepto</label>
                                <input type="text" class="form-control" id="conceptoIngresoEditar"
                                    placeholder="Concepto">
                            </div>
                        </div>
                        <!-- Mes y Fecha -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="mesIngresoEditar" class="form-label">Mes</label>
                                <select class="form-control" id="mesIngresoEditar">
                                    <option value="Enero">Enero</option>
                                    <option value="Febrero">Febrero</option>
                                    <option value="Marzo">Marzo</option>
                                    <option value="Abril">Abril</option>
                                    <option value="Mayo">Mayo</option>
                                    <option value="Junio">Junio</option>
                                    <option value="Julio">Julio</option>
                                    <option value="Agosto">Agosto</option>
                                    <option value="Septiembre">Septiembre</option>
                                    <option value="Octubre">Octubre</option>
                                    <option value="Noviembre">Noviembre</option>
                                    <option value="Diciembre">Diciembre</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="fechaIngresoEditar" class="form-label">Fecha</label>
                                <input type="date" class="form-control" id="fechaIngresoEditar">
                            </div>
                        </div>
                        <!-- Cantidad, Subtotal y Total -->
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label for="cantidadIngresoEditar" class="form-label">Cantidad</label>
                                <input type="number" class="form-control" id="cantidadIngresoEditar" min="0" value="0">
                            </div>
                            <div class="col-md-4">
                                <label for="subtotalIngresoEditar" class="form-label">Subtotal</label>
                                <input type="number" class="form-control" id="subtotalIngresoEditar" min="0" value="0">
                            </div>
                            <div class="col-md-4">
                                <label for="totalIngresoEditar" class="form-label">Total</label>
                                <input type="number" class="form-control" id="totalIngresoEditar" min="0" value="0">
                            </div>
                        </div>
                        <!-- Forma de pago y Referencia -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="formaPagoIngresoEditar" class="form-label">Forma de Pago</label>
                                <select class="form-control" id="formaPagoIngresoEditar">
                                    <option value="Efectivo">Efectivo</option>
                                    <option value="Tarjeta">Tarjeta</option>
                                    <option value="Transferencia">Transferencia</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="referenciaIngresoEditar" class="form-label">Referencia</label>
                                <input type="text" class="form-control" id="referenciaIngresoEditar"
                                    placeholder="Referencia">
                            </div>
                        </div>
                        <!-- Botón de guardar -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
                <!-- Footer del modal -->
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"
                        id="btnCerrarModalEditarIngreso">
                        <i class="bi bi-x-circle"></i> Cerrar
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</body>

</html>