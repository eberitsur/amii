                                    </div>
                                </div>

                                <!-- Pago 3 -->
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label for="pago3Up" class="form-label fw-bold text-secondary">
                                            <i class="bi bi-cash-stack"></i> Pago 3
                                        </label>
