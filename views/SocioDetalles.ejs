            </div>
        </nav>
    </section>
    <button id="btnMostrarOcultar"
        class="btn btn-primary rounded-circle shadow-lg d-flex justify-content-center align-items-center"
        style="width: 60px; height: 60px; position: fixed; bottom: 25px; left: 20px; z-index: 1050;">
        <i class="bi bi-list" style="font-size: 1.5rem;"></i>
    </button>

    <div id="contenidoPrincipal">
        <div id="successContainer" class="hidden"></div>
        <div id="errorContainer" class="hidden"></div>
        <div class=" justify-content-center" style="margin-top: 1%;">
            <h1 id="titulo" class="text-center"></h1>
        </div>
        <!-- Tabla de Socios -->
        <div class="main-content">
            <div class="elemento" id="agregarContent">
                <table class="table table-striped mt-3" id="tabSocios">
                    <thead style="background: rgba(7, 7, 190, 0.847); color: white;">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">Fecha de nacimiento</th>
                            <th scope="col">Fecha de inscripción</th>
                            <th scope="col">Email</th>
                            <th scope="col">Teléfono</th>
                            <th scope="col">Sección</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="sociosBody">
                        <!-- Aquí se cargarán los datos de socios -->
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Botón para Agregar Socios -->
        <div class="main-content">
            <div class="elemento" id="agregarContent">
                <strong>Agregar datos de inscripción</strong>
                <button style="margin-left: 1%; margin-bottom: 2%;" data-toggle="modal"
                    data-target="#modalAgregarInscripcion" id="btnAgregarInscripcion">Agregar</button>
            </div>
            <div class="elemento">
                <table class="table table-striped mt-3" id="inscripcionTab">
                    <thead style="background: rgba(7, 7, 190, 0.847); color: white;">
                        <tr>
                            <th scope="col">No. inscripción</th>
                            <th scope="col">Fecha de vencimiento</th>
                            <th scope="col">Status</th>
                            <th scope="col">Fecha de reinscripción</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="inscripBod">
                        <!-- Aquí se cargarán los datos de inscripciones -->
                    </tbody>
                </table>
            </div>
        </div>
        <div class="main-content">
            <div class="elemento" id="agregarContent">
                <strong>Agregar pago</strong>
                <button style="margin-left: 1%; margin-bottom: 2%;" data-toggle="modal" data-target="#modalPago"
                    id="btnPago">Agregar</button>
            </div>
            <div class="elemento">
                <table class="table table-striped mt-3" id="pagosTab">
                    <thead style="background: rgba(7, 7, 190, 0.847); color: white;">
                        <tr>
                            <th scope="col">Pago de</th>
                            <th scope="col">Fecha</th>
                            <th scope="col">Concepto</th>
                            <th scope="col">Pago1</th>
                            <th scope="col">fechaPago1</th>
                            <th scope="col">Pago2</th>
                            <th scope="col">fechaPago2</th>
                            <th scope="col">Pago3</th>
                            <th scope="col">fechaPago3</th>
                            <th scope="col">subtotal</th>
                            <th scope="col">restante</th>
                            <th scope="col">total</th>
                            <th scope="col">Estado</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="pagosBody">
                        <!-- Aquí se cargarán los datos de pagos -->
                    </tbody>
                </table>
            </div>
        </div>
        <div class="main-content">
            <div class="elemento" id="agregarContent">
                <div class="contenedor-filas">
                    <strong>Subir comprobante</strong>
                    <button style="margin-left: 1%; margin-bottom: 2%;" data-toggle="modal"
                        data-target="#modalSubirComprobante">Subir</button>
                </div>
                <div class="contenedor-filas">
                    <strong>mostrar comprobante de inscripcion y pago:</strong>
                    <select name="idFilter" id="filtroComprobante">
                        <option value="Todo">Todo</option>
                    </select>
                </div>
            </div>
            <div class="elemento">
                <table class="table table-striped mt-3" id="comprobantesTab">
                    <thead style="background: rgba(7, 7, 190, 0.847); color: white;">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Inscripción</th>
                            <th scope="col">Fecha de subida</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="comprobantesBody">
                        <!-- Aquí se cargarán los datos de comprobantes -->
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Modal para agregar inscripción -->
        <div class="modal fade" id="modalAgregarInscripcion" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content shadow-lg border-0">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title fw-bold" id="exampleModalLabel"><i class="bi bi-journal-plus"></i>
                            Agregar
                            Inscripción</h5>
                        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="elemento" style="background: white;">
                            <form id="formInscripcion">

                                <div class="form-group mb-3">
                                    <label for="id" class="form-label fw-bold text-secondary"><i
                                            class="bi bi-card-text"></i> ID</label>
                                    <input type="text" class="form-control border-primary shadow-sm" id="idInscripcion"
                                        placeholder="ID" disabled>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="fechaVencimiento" class="form-label fw-bold text-secondary"><i
                                            class="bi bi-calendar-event"></i> Fecha de vencimiento</label>
                                    <input type="date" class="form-control  border-primary shadow-sm"
                                        id="fechaVencimiento" placeholder="Fecha de vencimiento">
                                </div>
                                <div class="form-group mb-3">
                                    <label for="estado" class="form-label fw-bold text-secondary"> <i
                                            class="bi bi-check2-square"></i> Estado</label>
                                    <select class="form-control form-select border-primary shadow-sm" id="estado">
                                        <option value="inscrito">Inscrito</option>
                                        <option value="no inscrito">No Inscrito</option>
                                    </select>
                                </div>

                                <div class="form-group mb-3">
                                    <label for="fechaReinscripcion" class="form-label fw-bold text-secondary"><i
                                            class="bi bi-calendar-check"></i> Fecha de Reinscripción</label>
                                    <input type="date" class="form-control border-primary shadow-sm"
                                        id="fechaReinscripcion" placeholder="Fecha de reinscripción">
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary" id="btnAgregar"><i
                                            class="bi bi-plus-circle"></i> Agregar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnCerrarModal"><i
                                class="bi bi-x-circle"></i> Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal para subir comprobantes -->
        <div class="modal fade" id="modalSubirComprobante" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header border-bottom">
                        <h5 class="modal-title fw-bold text-primary" id="exampleModalLabel"> <i
                                class="bi bi-upload"></i>
                            Subir Comprobante</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="elemento" style="background: white;">
                        <form method="post" action="/socios/subir-comprobante" id="uploadForm"
                            enctype="multipart/form-data">
                            <div class="form-group mb-3">
                                <label for="comprobanteOption" class="form-label fw-bold text-secondary">
                                    <i class="bi bi-currency-dollar"></i> Selecciona un pago:
                                </label>
                                <select class="form-control form-select border-primary shadow-sm" id="comprobanteOption"
                                    name="pago_id" required>
                                    <!-- Opciones dinámicas -->
                                </select>
                            </div>

                            <div class="form-group mb-3">
                                <label for="NoPago" class="form-label fw-bold text-secondary">
                                    <i class="bi bi-list-ol"></i> No. de pago:
                                </label>
                                <select class="form-control form-select border-primary shadow-sm" name="NoPago"
                                    id="NoPago">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                </select>
                            </div>
                            <div class="form-group mb-3">
                                <label for="comprobantes" class="form-label fw-bold text-secondary"> <i
                                        class="bi bi-file-earmark"></i> Selecciona un archivo (PDF o imágenes):</label>
                                <input type="file" name="comprobante" id="comprobante"
                                    class="form-control border-primary shadow-sm" required>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary"><i class="bi bi-cloud-upload"></i> Subir
                                    Comprobante</button>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnCerrarModal"><i
                                class="bi bi-x-circle"></i> Cerrar</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal para agregar pago -->
        <div class="modal fade" id="modalPago" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content shadow-lg border-0">
                    <!-- Encabezado del Modal -->
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title fw-bold" id="exampleModalLabel">
                            <i class="bi bi-cash-coin"></i> Agregar Pago
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <!-- Cuerpo del Modal -->
                    <div class="modal-body">
                        <form id="formPago">
                            <!-- Selección de inscripción -->
                            <div class="form-group mb-3">
                                <label for="inscripcion" class="form-label fw-bold text-secondary">
                                    <i class="bi bi-list-check"></i> Seleccionar Inscripción
                                </label>
                                <select class="form-control form-select border-primary shadow-sm"
                                    id="inscripcion"></select>
                            </div>

                            <!-- Campo ID -->
                            <div class="form-group mb-3">
                                <label for="idPago" class="form-label fw-bold text-secondary">
                                    <i class="bi bi-card-text"></i> ID
                                </label>
                                <input type="text" class="form-control border-primary shadow-sm" id="idPago"
                                    placeholder="ID" disabled>
                            </div>

                            <!-- Concepto -->
                            <div class="form-group mb-3">
                                <label for="concepto" class="form-label fw-bold text-secondary">
                                    <i class="bi bi-textarea-resize"></i> Concepto
                                </label>
                                <input type="text" class="form-control border-primary shadow-sm" id="concepto"
                                    placeholder="Concepto">
                            </div>

                            <!-- Pagos y Fechas -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="pago1" class="form-label fw-bold text-secondary">Pago 1</label>
                                    <input type="number" class="form-control border-primary shadow-sm" id="pago1"
                                        min="0" value="0">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="fechaP1" class="form-label fw-bold text-secondary">Fecha de Pago
                                        1</label>
                                    <input type="date" class="form-control border-primary shadow-sm" id="fechaP1">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="pago2" class="form-label fw-bold text-secondary">Pago 2</label>
                                    <input type="number" class="form-control border-primary shadow-sm" id="pago2"
                                        min="0" value="0">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="fechaP2" class="form-label fw-bold text-secondary">Fecha de Pago
                                        2</label>
                                    <input type="date" class="form-control border-primary shadow-sm" id="fechaP2">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="pago3" class="form-label fw-bold text-secondary">Pago 3</label>
                                    <input type="number" class="form-control border-primary shadow-sm" id="pago3"
                                        value="0">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="fechaP3" class="form-label fw-bold text-secondary">Fecha de Pago
                                        3</label>
                                    <input type="date" class="form-control border-primary shadow-sm" id="fechaP3">
                                </div>
                            </div>

                            <!-- Fecha de pago general -->
                            <div class="form-group mb-3">
                                <label for="fechaPago" class="form-label fw-bold text-secondary">
                                    <i class="bi bi-calendar-event"></i> Fecha de Pago General
                                </label>
                                <input type="date" class="form-control border-primary shadow-sm" id="fechaPago">
                            </div>

                            <!-- Total -->
                            <div class="form-group mb-3">
                                <label for="total" class="form-label fw-bold text-secondary">
                                    <i class="bi bi-currency-dollar"></i> Total
                                </label>
                                <input type="number" class="form-control border-primary shadow-sm" id="total" min="0"
                                    value="0">
                            </div>

                            <!-- Botón para agregar -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Agregar
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Pie del Modal -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnCerrarModalPago">
                            <i class="bi bi-x-circle"></i> Cerrar
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal para editar socio -->
        <div class="modal fade" id="modalEditarSocio" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content shadow">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title" id="exampleModalLabel">Editar socio</h5>
                        <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="formSocioUp">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="id"><strong>ID</strong></label>
                                        <input type="text" class="form-control" id="id" placeholder="ID" disabled>
                                    </div>
                                    <div class="form-group">
                                        <label for="nombre"><strong>Nombre</strong></label>
                                        <input type="text" class="form-control" id="nombreUpSocio" placeholder="Nombre">
                                    </div>
                                    <div class="form-group">
                                        <label for="apellido"><strong>Apellido</strong></label>
                                        <input type="text" class="form-control" id="apellidoUpSocio"
                                            placeholder="Apellido">
                                    </div>
                                    <div class="form-group">
                                        <label for="fechaNacimiento"><strong>Fecha de Nacimiento</strong></label>
                                        <input type="date" class="form-control" id="fechaNacimientoUpSocio">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="fechaInscripcion"><strong>Fecha de Inscripción</strong></label>
                                        <input type="date" class="form-control" id="fechaInscripcionUpSocio">
                                    </div>
                                    <div class="form-group">
                                        <label for="email"><strong>Email</strong></label>
                                        <input type="email" class="form-control" id="emailUpSocio"
                                            placeholder="Correo electrónico">
                                    </div>
                                    <div class="form-group">
                                        <label for="telefono"><strong>Teléfono</strong></label>
                                        <input type="tel" class="form-control" id="telefonoUpSocio"
                                            placeholder="Teléfono">
                                    </div>
                                    <div class="form-group">
                                        <label for="seccion"><strong>Sección</strong></label>
                                        <select class="form-control" id="seccionUpSocio">
                                            <option value="AMIIPLAYA">AMII Playa</option>
                                            <option value="2">Sección 2</option>
                                            <option value="3">Sección 3</option>
                                            <option value="4">Sección 4</option>
                                            <option value="5">Sección 5</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group text-right mt-3">
                                <button type="submit" class="btn btn-primary px-4" id="btnAgregar">
                                    <i class="bi bi-pencil-square"></i>
                                    <span>Editar</span>
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"
                            id="btnCerrarModalUpSocio">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>


        <!--modal para editar inscripcion -->
        <div class="modal fade" id="modalEditarInscripcion" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content shadow-lg border-0">
                    <!-- Header del modal -->
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title fw-bold d-flex align-items-center" id="exampleModalLabel">
                            <i class="bi bi-journal-plus me-2"></i>
                            Editar Inscripción
                        </h5>
                        <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <!-- Cuerpo del modal -->
                    <div class="modal-body">
                        <form id="formInscripcionUp">
                            <!-- ID -->
                            <div class="form-group mb-3">
                                <label for="idInscripcionUp" class="form-label fw-bold text-secondary">
                                    <i class="bi bi-card-text"></i> ID
                                </label>
                                <input type="text" class="form-control border-primary shadow-sm" id="idInscripcionUp"
                                    placeholder="ID" disabled>
                            </div>
                            <!-- Fecha de vencimiento -->
                            <div class="form-group mb-3">
                                <label for="fechaVencimiento" class="form-label fw-bold text-secondary">
                                    <i class="bi bi-calendar-event"></i> Fecha de vencimiento
                                </label>
                                <input type="date" class="form-control border-primary shadow-sm" id="fechaVencimientoUp"
                                    placeholder="Fecha de vencimiento">
                            </div>
                            <!-- Estado -->
                            <div class="form-group mb-3">
                                <label for="estado" class="form-label fw-bold text-secondary">
                                    <i class="bi bi-check2-square"></i> Estado
                                </label>
                                <select class="form-control form-select border-primary shadow-sm" id="estadoUp">
                                    <option value="inscrito">Inscrito</option>
                                    <option value="no inscrito">No Inscrito</option>
                                </select>
                            </div>
                            <!-- Fecha de reinscripción -->
                            <div class="form-group mb-3">
                                <label for="fechaReinscripcion" class="form-label fw-bold text-secondary">
                                    <i class="bi bi-calendar-check"></i> Fecha de Reinscripción
                                </label>
                                <input type="date" class="form-control border-primary shadow-sm"
                                    id="fechaReinscripcionUp" placeholder="Fecha de reinscripción">
                            </div>
                            <!-- Botón de edición -->
                            <div class="d-grid">
                                <button type="submit"
                                    class="btn btn-primary d-flex align-items-center gap-2 px-3 shadow-sm">
                                    <i class="bi bi-pencil-square"></i>
                                    <span> Editar</span>
                                </button>
                            </div>
                        </form>
                    </div>
                    <!-- Footer del modal -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary d-flex align-items-center gap-2 shadow-sm"
