                            <div class="row g-3">
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label for="subtotalUp" class="form-label fw-bold text-secondary">
                                            <i class="bi bi-cash"></i> Subtotal
                                        </label>
                                        <input type="number" class="form-control border-primary shadow-sm"
